{
  "name": "@helpscout/specter",
  "version": "0.0.1",
  "private": false,
  "description": "JSON API Mocking and Testing for Node",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "npm run dev",
    "dev": "npm run test -- --reporter=dot --watch",
    "lint": "standard 'src/**/*.js' 'test/**/*.js' --fix",
    "test": "npm run lint && mocha test/setup.mocha.js test --recursive",
    "test:coverage": "nyc --reporter=html --reporter=text -- npm run test --reporter=dot"
  },
  "authors": [
    "ItsJonQ <itsjonq@gmail.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "config": "^1.26.2",
    "faker": "^4.1.0",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "coveralls": "^2.13.1",
    "dirty-chai": "^2.0.1",
    "glob": "^7.1.2",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "standard": "^10.0.3"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "globals": [
      "Event",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "jasmine",
      "jest",
      "React",
      "react",
      "test"
    ]
  },
  "nyc": {
    "exclude": [
      "specs/**/*",
      "test/**/*.js"
    ]
  }
}
